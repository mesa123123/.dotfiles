#!/bin/bash

# Set Rust Env
export CARGO_HOME="/home/$USER/.cargo"
. "$HOME/.cargo/env"

# Package List
packages=("bat" "bottom" "tealdeer" "du-dust" "tre" "git-delta" "tidy-viewer" "ripgrep" "gitui" "rtx-cli")

# Repeatable Function
function inventory() {
    if   [[ ! "$(cargo install --list) | grep \"${1}\")" == *"${1}"* ]]; then
    cargo install "${1}"
    fi
}

# Business Logic
 for package in "${packages[@]}";
      do
          inventory "$package"
      done
