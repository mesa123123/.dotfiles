#!/bin/bash -x

# Set Rust Env
export CARGO_HOME="/home/$USER/.cargo"
. "$CARGO_HOME/env"

# Package List
packages=("bat" "bottom" "tealdeer" "du-dust" "tre" "git-delta" "tidy-viewer" "ripgrep" "gitui" "rtx-cli" "xcolor"  "--locked ncspot")

# Repeatable Function
function inventory() {
    package=${1}
    if   [[ ! "$(cargo install --list) | grep \"${1}\")" == *"${1}"* ]]; then
        cargo install "${1}"
    fi
}

# Business Logic
 for package in "${packages[@]}";
      do
          inventory "$package"
      done
