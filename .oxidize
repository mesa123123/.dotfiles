#!/bin/bash

# Set Rust Env
export CARGO_HOME="/home/$USER/.cargo"
. "$CARGO_HOME/env"

# Package List
packages=("bat" "bottom" "tealdeer" "du-dust" "tre" "git-delta" "tidy-viewer" "ripgrep" "gitui" "rtx-cli" "xcolor"  "ncspot" "zoxide")

# Repeatable Function
function inventory() {
    echo "HERE!"
    package="${1}"
    if   [[ ! "$(cargo install --list) | grep \"${1}\")" == *"${1}"* ]]; then
        echo "Here"
        cargo install package
        echo "HEREY"
    fi
}

# Business Logic
 for package in "${packages[@]}";
      do
          inventory "$package"
      done
