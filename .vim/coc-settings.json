{
    "suggest.numberSelect": true,
    // Enable Codelens, has something to do with code actions
    "http.proxyStrictSSL": false,
    "codeLens.enable": true,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "client": {
                    "snippetSupport": true
                }
            }
        },
        "bash": {
            "command": "npx",
            "args": ["bash-language-server", "start"],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
    },
    "javascript.suggestionActions.enabled": false,
    "coc.preferences.extensionUpdateCheck": "daily",
    "pyright.enable": true,
    "python.linting.pylintCategorySeverity.warning": "Information",
    "python.linting.pycodestyleCategorySeverity.E": "Information",
    "markdownlint.config": {
        "line-length": false,
        "MD007": { "indent": 4 }
    },
    "solargraph.commandPath": "/home/$USER/.ruby/bin/solargraph",
    "yaml.schemaStore.url": ""
}
