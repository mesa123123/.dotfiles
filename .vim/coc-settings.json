{
    // Enable Codelens, has something to do with code actions
    "http.proxyStrictSSL": false,
    "codeLens.enable": true,
    "javascript.suggestionActions.enabled": false,
    "coc.preferences.extensionUpdateCheck": "daily",
    "pyright.enable": true,
    "python.linting.pylintCategorySeverity.warning": "Information",
    "python.linting.pycodestyleCategorySeverity.E": "Information",
    "omnisharp.version": "v1.37.3",
    "markdownlint.config": {
        "line-length": false,
        "MD007": {
            "indent": 2
        },
        "MD038": false,
        "MD034": false
    },
    "solargraph.commandPath": "/home/$USER/.ruby/bin/solargraph",
    "yaml.schemaStore.url": "",
    //Language Server Settings
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "client": {
                    "snippetSupport": true
                }
            }
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": [
                "terraform",
                ".tf"
            ],
            "initializationOptions": {}
        },
        "bash": {
            "command": "npx",
            "args": [
                "bash-language-server",
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    }
}
